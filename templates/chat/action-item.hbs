<div class="flex flex-col">
    <div class="grid grid-cols-3 gap-2">
        <div>
            <img src="{{img}}" alt="{{name}}">
        </div>

        <div class="flex flex-col col-span-2">

            {{#if (eq rollModifier "advantage")}}
                <p>
                    <span class="font-bold">{{localize "roe.action.hit"}}:</span> [[3d6kh2 + {{hit}}]]
                </p>
            {{/if}}

            {{#if (eq rollModifier "disadvantage")}}
                <p>
                    <span class="font-bold">{{localize "roe.action.hit"}}:</span> [[3d6kl2 + {{hit}}]]
                </p>
            {{/if}}

            {{#if (eq rollModifier "")}}
                <p>
                    <span class="font-bold">{{localize "roe.action.hit"}}:</span> [[2d6 + {{hit}}]]
                </p>
            {{/if}}

            {{#if damage}}
                <p>
                    <span class="font-bold">{{localize "roe.action.damage"}}:</span> [[{{damage}}]]
                </p>
            {{/if}}

            {{#if damageCritical}}
                <p>
                    <span class="font-bold">{{localize "roe.action.damageCritical"}}:</span> [[{{damageCritical}}]]
                </p>
            {{/if}}
        </div>
    </div>

    {{#if traits}}
        <div class="flex flex-wrap my-1">
            {{#each traits as |trait|}}
                <div class="bg-stone-400 border border-stone-700 flex mr-1 mb-1 p-1">
                    <p class="text-xs" data-tooltip="{{trait.description}}" data-tooltip-direction="UP">{{trait.label}}</p>
                </div>
            {{/each}}
        </div>
    {{/if}}
</div>
