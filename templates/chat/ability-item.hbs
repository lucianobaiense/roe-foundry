<div class="flex flex-col">
    <p class="text-base">{{name}}</p>

    <div class="grid grid-cols-3 gap-2">
        <div>
            <img src="{{img}}" alt="{{name}}"/>
        </div>

        <div class="col-span-2 flex flex-col justify-center">
            {{#if system.description}}
                <p>{{safe system.description}}</p>
            {{/if}}
        </div>
    </div>

    {{#if system.evolutionOne}}
        <div class="border-solid border-l-4 border-gray-500">
            <p class="mt-1 ml-2">
                <span class="font-bold">{{localize "roe.ability.evolutionOne"}}:</span>
                <div class="ml-2">
                    {{safe system.evolutionOne}}
                </div>
            </p>
        </div>
    {{/if}}

    {{#if system.evolutionTwo}}
        <div class="mt-2 border-solid border-l-4 border-gray-500">
            <p class="mt-1 ml-2">
                <span class="font-bold">{{localize "roe.ability.evolutionTwo"}}:</span>
                <div class="ml-2">
                    {{safe system.evolutionTwo}}
                </div>
            </p>
        </div>
    {{/if}}

    {{#if system.evolutionThree}}
        <div class="mt-2 border-solid border-l-4 border-gray-500">
            <p class="mt-1 ml-2">
                <span class="font-bold">{{localize "roe.ability.evolutionThree"}}:</span>
                <div class="ml-2">
                    {{safe system.evolutionThree}}
                </div>
            </p>
        </div>
    {{/if}}

    <div class="flex flex-wrap mt-2">
        {{#each system.traits as |trait|}}
            <div class="bg-stone-400 border border-stone-700 flex mr-1 mb-1 p-1">
                <p class="text-xs" data-tooltip="{{trait.description}}" data-tooltip-direction="UP">{{trait.label}}</p>
            </div>
        {{/each}}
    </div>
</div>
