
<div class="sheet-content">
    <table>
        <tr>
            <th>{{localize "roe.action.hit"}}</th>
            <th>{{localize "roe.action.damage"}}</th>
            <th>{{localize "roe.action.damageCritical"}}</th>
        </tr>
        <tr>
            <td><input name="system.hit" type="number" value="{{system.hit}}" data-dtype="Number"/></td>
            <td><input name="system.damage" type="number" value="{{system.damage}}" data-dtype="Number"/></td>
            <td><input name="system.damageCritical" type="number" value="{{system.damageCritical}}" data-dtype="Number"/></td>
        </tr>
    </table>

    <p>{{localize "roe.action.traits"}}</p>
    <input name="system.traits" type="text" value="{{system.traits}}" data-dtype="String"/>
</div>