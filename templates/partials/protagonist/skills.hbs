<section>
    <div class="flex justify-between">
        <h3 class="mb-2">{{localize 'roe.general.skills'}}</h3>
        <a class="item-create" data-type="skill" title="{{localize 'roe.general.add'}} {{localize 'roe.general.skills'}}">
            <i class="fas fa-square-plus"></i>
        </a>
    </div>

    {{#each skills as |skill|}}
        <div class="flex item mb-1 border-solid border-b border-black" data-id="{{skill._id}}">
            <i class="fa-solid fa-caret-right p-[5px]" style="color: #000000;"></i>
            <input class="item-edit-inline input-without-border !text-left !shadow-none" data-field="name" type="text" value="{{skill.name}}" data-dtype="String"/>

            <select class="item-edit-inline input-without-border" data-field="system.attribute">
                <option></option>
                {{selectOptions system.attributeList selected=skill.system.attribute localize=true}}
            </select>

            <p class="ml-1 pt-0.5">+</p>
            <input class="item-edit-inline input-without-border !w-5 !shadow-none" data-field="system.training" type="number" value="{{skill.system.training}}" data-dtype="Number"/>
            <p class="gray-status pt-0.5">+</p>
            <input class="item-edit-inline input-without-border !w-5 !shadow-none gray-status" data-field="system.modifier" type="number" value="{{skill.system.modifier}}" data-dtype="Number"/>

            <select class="item-edit-inline input-without-border" data-field="system.rollModifier">
                <option></option>
                {{selectOptions system.rollModifierList selected=system.rollModifier localize=true}}
            </select>

            <a class="roll" data-roll-type="skill" data-name="{{skill.name}}" data-skill-attribute="{{skill.system.attribute}}" data-skill-training="{{skill.system.training}}" data-skill-modifier="{{skill.system.modifier}}" data-skill-roll-modifier="{{skill.system.rollModifier}}" title="{{localize 'roe.general.roll'}}">
                <i class="fas fa-dice"></i>
            </a>

            {{!-- <a class="item-edit-popup" title="{{localize 'roe.general.edit'}}">
                <i class="fas fa-edit"></i>
            </a>

            <a class="item-delete" title="{{localize 'roe.general.delete'}}">
                <i class="fas fa-trash"></i>
            </a> --}}
        </div>
    {{/each}}
</section>