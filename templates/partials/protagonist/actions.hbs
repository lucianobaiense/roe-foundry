    {{!--Backup Exibição InLine --}}

    {{#each actions as |action|}}
        <div class="item flex border-solid border-b border-black" data-id="{{action._id}}">
            <i class="fa-solid fa-caret-right p-[5px]" style="color: #000000;"></i>
            <input class="item-edit-inline input-without-border !text-left !shadow-none" data-field="name" type="text" value="{{action.name}}" data-dtype="String"/>
            <input class="item-edit-inline input-without-border !text-right !shadow-none !w-12" data-field="system.hit" type="number" value="{{action.system.hit}}" data-dtype="Number"/>
            <i class="fa-solid fa-bullseye"></i>
            <input class="item-edit-inline input-without-border !text-right !shadow-none !w-12" data-field="system.damage" type="text" value="{{action.system.damage}}" data-dtype="String"/>
            <i class="fa-light fa-burst"></i>
            <input class="item-edit-inline input-without-border !text-right !shadow-none !w-12" data-field="system.damageCritical" type="text" value="{{action.system.damageCritical}}" data-dtype="String"/>
            <i class="fa-solid fa-burst"></i>

            <select class="item-edit-inline input-without-border" data-field="system.rollModifier">
                <option></option>
                {{selectOptions system.rollModifierList selected=system.rollModifier localize=true}}
            </select>

            <a class="roll" data-roll-type="action" data-roll-modifier="{{system.rollModifier}}" data-name="{{action.name}}" title="{{localize 'roe.general.roll'}}">
                <i class="fas fa-dice"></i>
            </a>

            {{!-- <a class="item-edit-popup" title="{{localize 'roe.general.edit'}}">
                <i class="fas fa-edit"></i>
            </a>

            <a class="item-delete" title="{{localize 'roe.general.delete'}}">
                <i class="fas fa-trash"></i>
            </a> --}}
        </div>
        <div class="flex mt-1 mb-2">
            {{#if action.system.traits}}
                <p class="text-xs gray-status">{{joinItems action.system.traits 'label'}}</p>
            {{/if}}
        </div>
    {{/each}}
</section>