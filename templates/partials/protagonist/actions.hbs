<section>
    <div class="flex">
        <h3 class="mb-2">{{localize 'roe.general.actions'}}</h3>
        <a class="item-create" data-type="action" title="{{localize 'roe.general.add'}}">
            <i class="fas fa-plus"></i>
        </a>
    </div>

    <p class="text-sm text-stone-500">{{localize "roe.action.label"}}, {{localize "roe.action.hit"}}, {{localize "roe.action.damage"}}, {{localize "roe.action.damageCritical"}}</p>

    {{#each actions as |action|}}
        <div class="item flex" data-id="{{action._id}}">
            <input class="item-edit-inline" data-field="name" type="text" value="{{action.name}}" data-dtype="String"/>
            <input class="item-edit-inline" data-field="system.hit" type="number" value="{{action.system.hit}}" data-dtype="Number"/>
            <input class="item-edit-inline" data-field="system.damage" type="number" value="{{action.system.damage}}" data-dtype="Number"/>
            <input class="item-edit-inline" data-field="system.damageCritical" type="number" value="{{action.system.damageCritical}}" data-dtype="Number"/>

            <a class="roll" data-roll-type="action" data-name="{{action.name}}" data-hit="{{action.system.hit}}" data-damage="{{action.system.damage}}" data-damage-critical="{{action.system.damageCritical}}" data-traits="{{action.system.traits}}" title="{{localize 'roe.general.roll'}}">
                <i class="fas fa-dice"></i>
            </a>

            <a class="item-edit-popup" title="{{localize 'roe.general.edit'}}">
                <i class="fas fa-edit"></i>
            </a>

            <a class="item-delete" title="{{localize 'roe.general.delete'}}">
                <i class="fas fa-trash"></i>
            </a>
        </div>
        <div class="flex mt-1 mb-2">
            {{#if action.system.traits}}
                <p class="bg-stone-400 mr-1 px-1">{{action.system.traits}}</p>
            {{/if}}        
        </div>
    {{/each}}
</section>